<?xml version="1.0" encoding="UTF-8"?>
<project name="custom_rules">
  
    <condition property="result.dir" else="../../../../../src_install/android">
      <isset property="result.dir"/>
    </condition>

    <target name="-pre-build" >
      <exec executable="ndk-build" dir="../../../../../src/framework/libraries/AndroidPrebuilt/AndroidNativeAppLib" failonerror="true"/> 
      <exec executable="ndk-build" failonerror="true"/> 
    </target>


    <target name="-pre-compile">
      <copy todir="libs/">
         <fileset dir="../../../../framework/libraries/AndroidPrebuilt/mailing">
            <include name="*.jar"/>
         </fileset>
      </copy>
    </target>


    <target name = "-post-build">
      <echo message="copying apk to: ${result.dir}" />
      <copy file="bin/${ant.project.name}-debug.apk" tofile="${result.dir}/${ant.project.name}-debug.apk" overwrite="true" />
      <move todir="../../../../../src/samples/android/xmls/profile_repository/profileImpls/">
         <fileset dir="libs/armeabi">
            <include name="**/*Profile.so"/>
         </fileset>
      </move>
    </target>

    <target name = "-pre-clean">
      <exec executable="ndk-build" >
         <arg value="clean"/>
      </exec>
    </target>
</project>

